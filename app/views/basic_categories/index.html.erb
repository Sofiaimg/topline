<p id="notice"><%= notice %></p>

<h1>Basic Categories</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @basic_categories.each do |basic_category| %>
      <tr>
        <td><%= basic_category.name %></td>
        <td><%= link_to 'Show', basic_category %></td>
        <td><%= link_to 'Edit', edit_basic_category_path(basic_category) %></td>
        <td><%= link_to 'Destroy', basic_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Basic Category', new_basic_category_path %>

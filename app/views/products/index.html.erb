  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.category.name %></td>
        <td><%= image_tag product.photo.thumb, class: "img-fluid" %></td>
        <td><%= product.description %></td>
        <td><%= product.finish %></td>
        <td><%= product.composition %></td>
        <td><%= product.fit %></td>
        <td><%= product.construction %></td>
        <td><%= product.placket %></td>
        <td><%= product.pocket %></td>
        <td><%= product.washing %></td>
        <td><%= product.other %></td>
        <td><%= link_to 'Show', product, class: "btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-primary btn-sm" %></td>

<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table">
  <thead>
    <tr>
      <th>Brand</th>
      <th>Style</th>
      <th>Description</th>
      <th>Construction</th>
      <th>Composition</th>
      <th>Washing</th>
      <th>Fit</th>
      <th>Pocket</th>
      <th>Placket</th>
      <th>Finish</th>
      <th>Packing</th>
      <th>Other</th>
      <th>Art</th>
      <th>Quotation details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.brand %></td>
        <td><%= product.style %></td>
        <td><%= product.description %></td>
        <td><%= product.construction %></td>
        <td><%= product.composition %></td>
        <td><%= product.washing %></td>
        <td><%= product.fit %></td>
        <td><%= product.pocket %></td>
        <td><%= product.placket %></td>
        <td><%= product.finish %></td>
        <td><%= product.packing %></td>
        <td><%= product.other %></td>
        <td><%= product.Art %></td>
        <td><%= product.quotation_details %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


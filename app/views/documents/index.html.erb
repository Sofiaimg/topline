<p id="notice"><%= notice %></p>

<h1>Documents</h1>

<table class="table table-striped table-bordered table-hover table-sm " id="myTable">
  <thead class="table-secondary">
    <tr>
      <th>Delivery</th>
      <th>Docsbymail</th>
      <th>Approvaldate</th>
      <th>Courier</th>
      <th>Received</th>
      <th>Senttoclient</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.delivery %></td>
        <td><%= document.docsbymail %></td>
        <td><%= document.approvaldate %></td>
        <td><%= document.courier %></td>
        <td><%= document.received %></td>
        <td><%= document.senttoclient %></td>
        <td><%= link_to 'Show', document %></td>
        <td><%= link_to 'Edit', edit_document_path(document) %></td>
        <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



<h1> CONFIRMED ORDERS</h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Season</th>
      <th>Supplier</th>
      <th>Handler</th>
      <th>Seller</th>
      <th>Client</th>
      <th>Clause</th>
      <th>Payment termns</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quotations.each do |quotation| %>
      <tr>
        <td><%= quotation.season.name %></td>
        <td><%= quotation.supplier.name %></td>
        <td><%= quotation.handler.name %></td>
        <td><%= quotation.seller.name %></td>
        <td><%= quotation.client.name %></td>
        <td><%= quotation.paymentterm.clause %></td>
        <td><%= quotation.paymentterm.conditions %></td>
        <td><%= quotation.status? ? "CONFIRMED" : "PENDING" %></td>
      <!--  <td><%= link_to 'Show', quotation %></td> -->
          <% if quotation.status? == false%>
        <% end %>
      </tr>
    <% end %>
  </tbody>
  
  <thead>
    <tr>
      <th>Quotation</th>
      <th>Brand</th>
      <th>Product</th>
      <th>Color</th>
      <th>Quantity</th>
      <th>Size</th>
      <th>Ratio</th>
      <th>Deliverydate</th>
      <th>Targetprice</th>
      <th>Finalprice</th>
      <th>Otherdetails</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quotationdetails.each do |quotationdetail| %>
      <tr>
        <td><%= quotationdetail.quotation.id %></td>
        <td><%= quotationdetail.brand.name %></td>
        <td><%= quotationdetail.product.description %></td>
        <td><%= quotationdetail.color.name %></td>
        <td><%= quotationdetail.quantity %></td>
        <td><%= quotationdetail.size.name %></td>
        <td><%= quotationdetail.ratio %></td>
        <td><%= quotationdetail.deliverydate %></td>
        <td><%= quotationdetail.targetprice %></td>
        <td><%= quotationdetail.finalprice %></td>
        <td><%= quotationdetail.otherdetails %></td>
      </tr>
    <% end %>
  </tbody>
</table>

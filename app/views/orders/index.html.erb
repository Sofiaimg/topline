
<h2> Orders</h2>

<table class="table table-striped table-bordered table-hover table-sm " id="myTable">
  <thead class="cardgreen">
    <tr>
      <th>Season</th>
      <th>Supplier</th>
      <th>Handler</th>
      <th>Seller</th>
      <th>Client</th>
      <th>Clause</th>
      <th>Payment termns</th>
      <th>Status</th>
      <th>Proforma</th>

  </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.season.name %></td>
        <td><%= order.supplier.name %></td>
        <td><%= order.handler.name %></td>
        <td><%= order.seller.name %></td>
        <td><%= order.client.name %></td>
        <td><%= order.paymentterm.clause %></td>
        <td><%= order.paymentterm.conditions %></td>
        <td><%= order.status? ? "CONFIRMED" : "PENDING" %></td>
        <td><%= order.pi %></td>
        

      </tr>
    <% end %>
  </tbody>
</table>

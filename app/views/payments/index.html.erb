<p id="notice"><%= notice %></p>

<h1>Payments</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Totalamount</th>
      <th>Advance</th>
      <th>Advancedate</th>
      <th>Balance</th>
      <th>Balancepaid</th>
      <th>Paiddate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.order %></td>
        <td><%= payment.totalamount %></td>
        <td><%= payment.advance %></td>
        <td><%= payment.advancedate %></td>
        <td><%= payment.balance %></td>
        <td><%= payment.balancepaid %></td>
        <td><%= payment.paiddate %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= form_with(model: payment, local: true) do |form| %>
  <% if payment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(payment.errors.count, "error") %> prohibited this payment from being saved:</h2>

      <ul>
      <% payment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :order_id %>
    <%= form.collection_select :order_id, Order.all, :id, :order_id %>
  </div>

  <div class="field">
    <%= form.label :totalamount %>
    <%= form.number_field :totalamount, id: :payment_totalamount, step: :any %>
  </div>

  <div class="field">
    <%= form.label :advance %>
    <%= form.number_field :advance, id: :payment_advance, step: :any %>
  </div>

  <div class="field">
    <%= form.label :advancedate %>
    <%= form.date_field :advancedate, id: :payment_advancedate %>
  </div>

  <div class="field">
    <%= form.label :balance %>
    <%= form.number_field :balance, id: :payment_balance, step: :any %>
  </div>

  <div class="field">
    <%= form.label :balancepaid %>
    <%= form.number_field :balancepaid, id: :payment_balancepaid, step: :any %>
  </div>

  <div class="field">
    <%= form.label :paiddate %>
    <%= form.date_select :paiddate, id: :payment_paiddate %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

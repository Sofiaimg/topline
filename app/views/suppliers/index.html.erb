<p id="notice"><%= notice %></p>

<h1>Suppliers</h1>

<table class="table table-striped table-bordered table-hover table-sm " id="myTable">
  <thead class="table-danger">
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Country</th>
      <th>Contact</th>
      <th>Phone</th>
      <th>Fax</th>
      <th>Email</th>
      <th>Email</th>
      <th>Email</th>
      <th>Email</th>
      <th>Bank Details</th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.name %></td>
        <td><%= supplier.address %></td>
        <td><%= supplier.country %></td>
        <td><%= supplier.contact %></td>
        <td><%= supplier.phone %></td>
        <td><%= supplier.fax %></td>
        <td><%= supplier.email %></td>
        <td><%= link_to 'Show', supplier %></td>
        <td><%= link_to 'Edit', edit_supplier_path(supplier) %></td>
        <td><%= link_to 'Destroy', supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><button class="btn btn-outline-danger btn-sm"><%= link_to "See Bank Details", supplieraccounts_path(supplier)%></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<button class="btn btn-outline-danger btn-sm"><%= link_to 'New Supplier', new_supplier_path %></button>

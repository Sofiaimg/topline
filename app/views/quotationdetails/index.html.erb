<p id="notice"><%= notice %></p>

<h1>Quotationdetails</h1>

<table class="table table-striped table-bordered table-hover table-sm " id="myTable">
  <thead>
    <tr>
      <th>Status</th>
      <th>Quotation</th>
      <th>Brand</th>
      <th>Product</th>
      <th>Color</th>
      <th>Quantity</th>
      <th>Size</th>
      <th>Ratio</th>
      <th>Deliverydate</th>
      <th>Targetprice</th>
      <th>Finalprice</th>
      <th>Otherdetails</th>
      <th>Total order</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>


    </tr>
  </thead>

  <tbody>
    <% @quotationdetails.each do |quotationdetail| %>
      <tr>
        <td><%= quotationdetail.status? ? "Confirmed" : "Not Confirmed" %></td>
        <td><%= quotationdetail.quotation.id %></td>
        <td><%= quotationdetail.brand.name %></td>
        <td><%= quotationdetail.product.description %></td>
        <td><%= quotationdetail.color.name %></td>
        <td><%= quotationdetail.quantity %></td>
        <td><%= quotationdetail.size.name %></td>
        <td><%= quotationdetail.ratio %></td>
        <td><%= quotationdetail.deliverydate %></td>
        <td><%= quotationdetail.targetprice %></td>
        <td><%= quotationdetail.finalprice %></td>
        <td><%= quotationdetail.otherdetails %></td>
        <td><%= (quotationdetail.quantity.to_i * quotationdetail.finalprice.to_i)  %></td>
        <td><%= link_to 'Show', quotation_quotationdetails_path(:quotation_id, quotationdetail.id) %></td>
        <td><%= link_to 'Edit', edit_quotation_quotationdetail_path(:quotation_id, quotationdetail.id) %></td>
        <td><%= link_to 'Destroy', quotation_quotationdetail_path(:quotation_id, quotationdetail.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
  </tbody>
</table>


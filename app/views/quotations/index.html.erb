<h2>Quotations</h2>

<table class="table table-striped table-bordered table-hover table-sm " id="myTable">
  <thead class="table-warning">
    <tr>
      <th>Season</th>
      <th>Supplier</th>
      <th>Handler</th>
      <th>Seller</th>
      <th>Client</th>
      <th>Clause</th>
      <th>Payment termns</th>
      <th>Status</th>
      <th>proforma</th>
      <th>links</th>
      <th>links</th>
      <th>links</th>

    </tr>
  </thead>

  <tbody>
    <% @quotations.each do |quotation| %>
      <tr>
        <td><%= quotation.season.name %></td>
        <td><%= quotation.supplier.name %></td>
        <td><%= quotation.handler.name %></td>
        <td><%= quotation.seller.name %></td>
        <td><%= quotation.client.name %></td>
        <td><%= quotation.paymentterm.clause %></td>
        <td><%= quotation.paymentterm.conditions %></td>
        <td><%= quotation.status? ? "Confirmed" : "Pending" %> |
        <td><%= quotation.pi %></td>
        <td><%= link_to 'Show', quotation %>
          <% if quotation.status? == false%>
          <%= link_to "add new quotation", new_quotationdetail_path %>|
          <%= link_to "Edit quotation", quotationdetails_path %></td>
        <% end %>

        <td><%= link_to 'Edit', edit_quotation_path(quotation) %></td>
        <td><%= link_to 'Destroy', quotation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

